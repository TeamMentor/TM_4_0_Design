mixin poc-filters
    .bg
        h3 Filter by
        #filters
            if filters
                for filter in filters
                    .dropdown
                        button= filter.title
                            span.right
                                +arrow-down
                            for result in filter.results
                                ul.dropdown-menu
                                    li
                                        a(href= href )= result.title
                                            span.right.badge= result.size