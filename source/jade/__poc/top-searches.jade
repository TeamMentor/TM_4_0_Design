extends ../_layouts/page
block content
  #application
    .row
      .col-2
        .lge-container
      .col-10
        .lge-container
          .bg
            h2= title
            if top_Searches
              table
                tr
                  th title (href)
                  th weight
                for item in top_Searches
                  tr
                    td
                      a(href='/search?text='+item.title)= item.title
                    td= item.weight