extends ../_layouts/page
block content
  #application
    .row
      .col-2
        .lge-container
      .col-10
        .lge-container
          .bg
            h2= title
            if top_Articles
              table
                tr
                  th title (href)
                  th weight
                for item in top_Articles
                  tr
                    td
                      a(href=item.href)= item.title
                    td= item.weight


