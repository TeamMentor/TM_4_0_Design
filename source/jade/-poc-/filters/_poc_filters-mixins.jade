mixin poc-filters
    h3 Filter by
    #filters
        if filters
            for filter in filters
                p= filter.title
                .list-group
                    for result in filter.results
                        if activeFilter && result.id == activeFilter.id
                            b
                                a(href= href )= result.title
                                    span.badge= result.size
                        else
                            a(href=href + '/'+result.id)= result.title
                                span.badge= result.size

mixin poc-filters-2
    h3 Filter by
    #filters
        if filters
            for filter in filters
                .dropdown
                    button= filter.title
                        span.right
                            +arrow-down
                        for result in filter.results
                            ul.dropdown-menu
                                li
                                    a(href= href )= result.title
                                        span.right.badge= result.size