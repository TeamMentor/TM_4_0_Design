extends ../_layouts/page
block content
	.row
		.col-3#help-nav
			.lge-container
				h3 Help
				if library
					each view in library.Views
						h4= view.Title
						.nav
							table
								each article in view.Articles
									tr
										td
											a(href= '/help/' + article.Id)
												= article.Title
		.col-6#help-docs
			.lge-container
				if title
					h2= title
				!= content
		.col-3
			.lge-container
				br