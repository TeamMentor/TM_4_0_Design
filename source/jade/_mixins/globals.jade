include ../../shared-mixins/globals.jade

//- static texts
- var head_title = 'TEAM Mentor 4.0 (Html version)'
- var tm_version  = 'TEAM Mentor v4.0 (Alpha 15)'

mixin tm-support-email
    a#tm-support-email(href='mailto:support@securityinnovation.com') support@securityinnovation.com

mixin copyright
    #copyright
        .row
            .col-offset-1.col-10
                a(href='http://www.securityinnovation.com/', target='_blank')
                    #si-logo
                include:md ../../content/articles/copyright-information.md
                ul
                    li
                        +mail-icon
                        a(href='mailto:support@securityinnovation.com') support@securityinnovation.com
                    li
                        +paperclip-icon
                        a#terms-and-conditions(href="/misc/terms-and-conditions") Terms & Conditions