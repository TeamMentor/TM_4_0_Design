mixin article
    #article.bg.content
        table
            tr.article-title
                td.vertical-align
                    +filter-icon('Technology',technology)
                    br
                    +filter-icon('Type', type)
                td
                    h1#title= title
        #html.article-content!= article_Html
        .alert.alert-ok
            span.alert-icon !
            span.alert-text What did you think about this article?
                a(href='mailto:support@securityinnovation.com')      Let our team know.

mixin no-article
    #article.bg.content
        include:md ../../content/articles/no-article.md