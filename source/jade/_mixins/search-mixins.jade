//- directory-list
mixin directory-list
    h3#title= title
    .nav
        #containers
            if(containers)
                table
                    each container in containers
                        tr
                            td
                                a(href= href + ',' +container.id, id=container.id)= container.title
                            td
                                span.badge= container.size

//- search-bar-input
mixin search-bar-input
    #search
        form(action='/search', method='GET')
            .input-group
                input.form-control(type='text', placeholder='Type keywords here', name='text')
                span.input-group-btn
                    button.btn-search-bar(type='submit') SEARCH

//- results
mixin results
    #results
        table
            tr
                td
                    if results
                        if results.size() > 250
                            h5#resultsTitle= 'Showing ' + results.take(250).size() + ' articles (of '  + results.size() + ')'
                        else
                            h5#resultsTitle= 'Showing ' + results.size() + ' articles'
                td.text-right
                    if activeFilter
                        span.filtered Active filter:
                        span#activeFilter.badge= activeFilter.title
                            span.close
                                a(href=href) x
//- articles-list
mixin articles-list
    .list-group
        #articles
            if results
                each result in results.take(250)
                    if result
                      a(href='/article/' + result.id, id=result.id)
                        h4=  result.title
                        p= result.summary + '...'

//- filters
mixin filters-div
        h3 Filter by
        .nav#filters
            if filters
                for filter in filters
                    .dropdown
                        button= filter.title
                            span.right
                                i.fi-arrow-down
                        ul.dropdown-menu
                            for result in filter.results
                                if activeFilter && result.id == activeFilter.id
                                    a(href= href )
                                        li
                                            b= result.title
                                                span.badge= result.size
                                else
                                    a(href=href + '/'+result.id)
                                        li= result.title
                                            span.badge= result.size

