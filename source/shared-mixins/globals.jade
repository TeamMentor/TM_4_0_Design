//- Breadcrumbs
mixin breadcrumbs
  if breadcrumbs && breadcrumbs.size() > 1
    dl.sub-nav
      #navigation
        for item,index in breadcrumbs
          if index == breadcrumbs.size() -1
            dd.active
              a(href= item.href)= item.title
          else
            dd
              if activeFilter
                a(href= item.href + '/' + activeFilter.ids)= item.title
              else
                a(href= item.href)= item.title

//- Form Inputs
mixin username-input
  label(for='username') Username
  input(type='text', id='username', name='username', placeholder='Username',value='#{viewModel?viewModel.username:""}',required,maxlength='256')

mixin password-input
  label(for='password') Password
  input(type='password', id='password', name='password', placeholder='Password',value='#{viewModel?viewModel.password:""}',required,maxlength='256')

mixin confirm-password-input
  label(for='confirm-password') Confirm Password
  input(type='password', id='confirm-password', name='confirm-password',placeholder='Password',value='#{viewModel?viewModel.confirmpassword:""}',maxlength='256')

mixin email-input
