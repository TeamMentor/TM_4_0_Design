//- horizontal-rule
mixin horizontal-rule
    hr

//- Breadcrumbs
mixin breadcrumbs
  dl.sub-nav
    #navigation
      dt NAVIGATE:
        if breadcrumbs
          for item,index in breadcrumbs
            if index == breadcrumbs.size() -1
              dd.active
                a(href= item.href)= item.title
            else
              dd
                a(href= item.href)= item.title

//- Form Inputs
mixin username-input
    label(for='username')
        | Username
    input(type='text', id='username', name='username', placeholder='Username')

mixin password-input
    label(for='password')
        | Password
    input(type='password', id='password', name='password', placeholder='Password')

mixin confirm-password-input
    label(for='confirm-password')
        | Confirm Password
    input(type='password', id='confirm-password', name='confirm-password',placeholder='Password')

mixin email-input
    label(for='email')
        | Email Address
    input(type='email', id='email', name='email', placeholder='Email Address')

