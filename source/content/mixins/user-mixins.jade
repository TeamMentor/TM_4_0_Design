//- user-details-form
mixin user-details-form
  form(role='form', action='user.html')
    .form-group
      label(for='user-name') Name
      input.form-control(type='user-name', id='user-name', placeholder='Name')
    .form-group
      label(for='user-email') Email Address
      input.form-control(type='user-email', id='user-email', placeholder='Email Address')
    .form-group
      label(for='user-title') Title
      input.form-control(type='user-title', id='user-title', placeholder='Title')
    .form-group
      label(for='user-company') Company
      input.form-control(type='user-company', id='user-company', placeholder='Company')
    .form-group
      label(for='user-state') State
      input.form-control(type='user-state', id='user-state', placeholder='State')
    .form-group
      label(for='user-country') Country
      input.form-control(type='user-country', id='user-country', placeholder='Country')
    .form-group
      label(for='user-group-id') Group ID
      input.form-control(type='user-group-id', id='user-group-id', placeholder='Group ID')
    button(type='submit')
      | Ok, Done

//- new-password-form
mixin new-password-form
  form(role='form', action='user.html')
    .form-group
      label(for='user-current-password') Current Password
      input.form-control(type='user-current-password', id='user-current-password', placeholder='Current Password')
    .form-group
      label(for='user-new-password') New Password
      input.form-control(type='user-new-password', id='user-new-password', placeholder='New Password')
    .form-group
      label(for='user-confirm-new-password') Confirm New Password
      input.form-control(type='user-confirm-new-password', id='user-confirm-new-password', placeholder='Confirm New Password')
    button(type='submit') Save