//- Flare Search Bar Input
mixin search-bar
    #search
        a.button.btn-divs#navigate-button(href='#left-column')
            +index-icon
        .search-field
            input.search-input(type='text', placeholder='Type keywords here')
            a.button.btn-search#search-button(href='app-keyword-search')
                +search-icon
        a.button.btn-divs#filters-button(href='#right-column')
            +filters-icon

//- Clear and Save Results
mixin results-save-clear
    .label 0/200 results showing
    ul.inline
        li
            +save-results-button
        li
            +delete-results-button

//-Clear and Delete Results
mixin results-delete-share
    .label 0/200 results showing
    ul.inline
        li
            +delete-results-button
        li
            +share-results-button

//- Start View
mixin start-view
    section.row
        #label
            .label Popular Search Terms
        #articles
            +search-term-list
    section.row
        #label
            .label Recently Viewed Articles
        #articles
            +articles-list
    section.row
        #label
            .label Top Articles
        #articles
            +articles-list

//- Articles List
mixin articles-list
    .container.article
        +metadata
        +article-summary
    .container.article
        +metadata
        +article-summary
    .container.article
        +metadata
        +article-summary

//- Saved Articles List
mixin saved-articles-list
    section.row
        #label
            +results-delete-share
        #articles
            .container.article
                +metadata-saved
                +article-summary
            .container.article
                +metadata-saved
                +article-summary
            .container.article
                +metadata-saved
                +article-summary

//- Article Metadata (unsaved)
mixin metadata
    .metadata
        ul
            li
                span.badge #1
            li #
                // Technology Icon
            li #
                // Phase Icon
            li #
                // Type Icon
            li
                +save-button
            li
                +share-button

//- Article Metadata (saved)
mixin metadata-saved
    .metadata
        ul
            li
                span.badge #1
            li #
                // Technology Icon
            li #
                // Phase Icon
            li #
                // Type Icon
            li
                +delete-button
            li
                +share-button

//- Article Summary
mixin article-summary
    .summary
        a(href='article-new-window-view')
            h3#article-headline Article Headline Article Headline Article Headline
        include:md ../../content/articles/article-details.md

//- Saved Search Results List
mixin saved-search-results
    section.row
        #label
            +results-delete-share
        #articles
            +saved-search-term-list

//- Search Results List
mixin search-term-list
    .container.search-term
        a(href='app-keyword-search')
            +search-icon
            span Search Term
    .container.search-term
        a(href='app-keyword-search')
            +search-icon
            span Search Term
    .container.search-term
