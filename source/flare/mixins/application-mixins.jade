    article.search-term
        a(href='app-keyword-search')
            +search-icon
            span Search Term
    ul.display-inline
        li.half-width
            +delete-button
        li.half-width
            +share-button
    article.search-term
        a(href='app-keyword-search')
            +search-icon
            span Search Term
    ul.display-inline
        li.half-width
            +delete-button
        li.half-width
            +share-button

