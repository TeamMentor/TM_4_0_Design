//- Flare Login Form
mixin login-form
	include:md ../../content/getting-started/login-form.md
	form(role='form' method='post' action='/flare/home/main-app-view')
		.row
			.small-12.large-12.columns
				+username-input
		.row
			.small-12.large-12.columns
				+password-input
		.row
			.small-12.large-12.columns
				+login-button
		br
		.row
			.small-12.large-12.columns
				a(href='forgot-password')
					+forgot-password-button

//- Flare Sign Up Form
mixin sign-up-form
	include:md ../../content/getting-started/sign-up-form.md
	form(action='../home/main-app-view')
		.row
			.small-12.large-12.columns
				+username-input
		.row
			.small-12.large-12.columns
				+email-input
		.row
			.small-12.large-12.columns
				+flare-password-input
		.row
			.small-12.large-12.columns
				include:md ../../content/getting-started/agree-to-toc.md
		.row
			.small-12.large-12.columns
				+sign-up-button

//- Flare Sign Up Form Prompts
mixin sign-up-form-prompts
	include:md ../../content/getting-started/sign-up-form.md
	form(action='../../home/main-app-view')
		.row
			.small-12.large-12.columns
				+username-input
				p Your username should only contain letters and numbers.
		.row
			.small-12.large-12.columns
				+email-input
				p We'll email you a confirmation.
		.row
			.small-12.large-12.columns
				+flare-password-input
				p Your password should be at least 8 characters long. It should have one uppercase and one lowercase letter, a number and a special character.
		.row
			.small-12.large-12.columns
				include:md ../../content/getting-started/agree-to-toc.md
		.row
			.small-12.large-12.columns
				+sign-up-button

//- Flare Forgot Password Form
mixin flare-forgot-password-form
	include:md ../../content/getting-started/forgot-password-form.md
	form(action='index-validation')
		.row
			.small-12.large-12.columns
				+email-input
		.row
			.small-12.large-12.columns
				+get-password-button

//- Flare Team Mentor Summary
mixin team-mentor-summary
	include:md ../../content/getting-started/login-wall-summary.md
	table
		tr
			td.text-center.icons-green
				i.fi-clipboard-pencil
			td
				include:md ../../content/landing-pages/selling-point-1.md
		tr
			td.text-center.icons-green
				i.fi-arrows-in
			td
				include:md ../../content/landing-pages/selling-point-2.md
		tr
			td.text-center.icons-green
				i.fi-checkbox
			td
				include:md ../../content/landing-pages/selling-point-3.md