//- Flare User Details Display
mixin user-details-display
	.bg
		h3 User Details
		.row
			.small-12.large-6.columns
				+user-icon
				|    Name
				br
				+company-icon
				|    Title, Company
				br
				+group-id-icon
				|    Group ID
			.small-12.large-6.columns
				+email-icon
				|    Email
				br
				+navigate-icon
				|    Location

// Permanent Filters
mixin permanent-filters
	.bg
		h3 Permanent Filters
		+flare-filters-active
		br
		a.action(href='user-add-filter')
			+change-filters-icon

//- Flare Other User Settings
mixin other-user-settings
	.bg
		.row
			.small-12.large-6.columns
				a.action(href='user-edit')
					+edit-icon
			.small-12.large-6.columns
				a.action(href='user-new-password')
					+new-pw-icon

//- Flare Edit User Details
mixin flare-edit-user-details
	h3 Edit User Details
	form(action='alert-user')
		.row
			.small-12.columns
				+name-input
		.row
			.small-12.columns
				+email-input
		.row
			.small-12.large-6.columns
				+title-input
			.small-12.large-6.columns
				+company-input
		.row
			.small-12.large-6.columns
				+country-input
			.small-12.large-6.columns
				+state-input
		br
		.row
			.small-12.medium-6.end.columns
				+ok-button

//- Flare Change Password
mixin flare-change-password
	h3 Change Password
	form(action='alert-user')
		.row
			.small-12.columns
				+password-input
		.row
			.small-12.columns
				+flare-new-password-input
		br
		.row
			.small-12.medium-6.end.columns
				+ok-button