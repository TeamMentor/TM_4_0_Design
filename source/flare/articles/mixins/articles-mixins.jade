include ../../../content/mixins/articles-mixins.jade
include ../../home/mixins/application-mixins.jade

//- Article
mixin article
	#article
		include:md ../../../content/teamMentor/articles/article-new-window.md
	// article-div

//- Article Options
mixin article-options
	dl.tabs(data-tab='data-tab')
		dd
			a(href='#metadata')
				+metadata-icon
		// dd
		dd
			a(href='#save')
				+save-icon
		// dd
		dd
			a(href='#share')
				+share-icon
		// dd
	// dl-tabs
	.tabs-content
		#metadata.content
			+metadata-table
		// metadata-content

		#save.content
			+save-div
		// save-content
			
		#share.content
			+share-div
		// share-content
	// tabs-content


//- Related Articles
mixin related-articles
	#related-articles
		h3 You might also like
		dl.accordion(data-accordion='data-accordion')
			dd.accordion-navigation
				a(href='#panel1') Article Headline
				#panel1.content
					a(href='/articles/article-new-window-view.jade')
						include:md ../../../content/teamMentor/articles/article-details.md
				// panel1-content
			// accordian-navigation
			dd.accordion-navigation
				a(href='#panel2') Article Headline
				#panel2.content
					include:md ../../../content/teamMentor/articles/article-details.md
				// panel2-content
			// accordian-navigation
			dd.accordion-navigation
				a(href='#panel3') Article Headline
				#panel3.content
					include:md ../../../content/teamMentor/articles/article-details.md
				// panel3-content
			// accordian-navigation
		// accordian
	// related-articles-div

