//- Flare Search Bar Input
mixin flare-search-bar-input
	.row
		.large-12.columns
				.row.collapse
					.small-8.large-10.columns
						input#search-bar(type='text', placeholder='Type keywords here')
					.small-2.large-1.columns
						a.button.postfix#search-button(href='#')
							+search-icon
					.small-2.large-1.columns
						a.button.postfix(href='#')
							+filter-icon

//- Flare Results-Save-Clear
mixin flare-results-save-clear
	.row
		.small-12.large-6.columns
			h4 0/200 results showing
		.small-6.large-3.columns.vertical-align
			a.button(href='#')
				+save-icon
		.small-6.large-3.columns.vertical-align
			a.button(href='#')
				+clear-icon

//- Articles List
mixin flare-articles-list
	dl.accordion(data-accordion='data-accordion')
		dd.accordion-navigation
			a(href='#panel1') Article Headline
			#panel1.content
				include:md ../../../content/teamMentor/articles/article-details.md
				+flare-article-preview-menu
		dd.accordion-navigation
			a(href='#panel2') Article Headline
			#panel2.content
				include:md ../../../content/teamMentor/articles/article-details.md
		dd.accordion-navigation
			a(href='#panel3') Article Headline
			#panel3.content
				include:md ../../../content/teamMentor/articles/article-details.md

//- Article Preview Menu
mixin flare-article-preview-menu
	.row.text-center
		.small-12.large-4.columns
			a(href='/deploy/flare/articles/article-new-window-view.html', target='_blank')
				+open-icon
		.small-12.large-4.columns
			a(href='#save')
				+save-icon
		.small-12.large-4.columns
			a(href='#share')
				+share-icon

//- Flare Main App View
mixin flare-main-app-view
	dl.accordion(data-accordion='data-accordion')
		dd.accordion-navigation
			a(href='#panel1') Recently Viewed Articles
			#panel1.content
				+flare-articles-list
		dd.accordion-navigation
			a(href='#panel2') Popular Search Terms
			#panel2.content
				+flare-articles-list
		dd.accordion-navigation
			a(href='#panel3') Top Articles
			#panel3.content
				+flare-articles-list
		dd.accordion-navigation
			a(href='#panel4') New Articles
			#panel4.content
				+flare-articles-list