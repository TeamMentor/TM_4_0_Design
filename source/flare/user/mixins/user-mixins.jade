include ../../../content/mixins/user-mixins.jade

//- login-form
mixin login-form
	include:md ../../../content/teamMentor/getting-started/login-form.md
	form
		.row
			.small-12.large-12.columns
				+username-input
		.row
			.small-12.large-12.columns
				+password-input
		.row
			.small-12.large-12.columns
				+login-button
		br
		.row
			.small-12.large-12.columns
				+forgot-password-button

//- sign-up-form
mixin sign-up-form
	include:md ../../../content/teamMentor/getting-started/sign-up-form.md
	form
		.row
			.small-12.large-12.columns
				+username-input
		.row
			.small-12.large-12.columns
				+email-input
		.row
			.small-12.large-12.columns
				+password-input
		.row
			.small-12.large-12.columns
				include:md ../../../content/teamMentor/getting-started/agree-to-toc.md
		.row
			.small-12.large-12.columns
				+sign-up-button