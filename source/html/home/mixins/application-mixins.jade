//- Jade Search Bar Input
mixin jade-search-bar-input
	.input-group
		input.form-control(type='text', placeholder='Type keywords here')
		span.input-group-btn
			a(href='app-keyword-search')
				button(type='button')
					| SEARCH
	// input-group

//- Jade Results-Save-Clear
mixin results-save-clear
	table
		tr
			td
				h4 0/200 results showing
			td
				a.action(href='alert-app-keyword-search') Save
			td
				a.action(href='main-app-view') Clear
		//tr
	// table

