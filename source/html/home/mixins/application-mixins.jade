//- Jade Search Bar Input
mixin jade-search-bar-input
	.input-group
		input.form-control(type='text', placeholder='Type keywords here')
		span.input-group-btn
			button.btn-search-bar(type='button')
				| SEARCH

//- Jade Results-Save-Clear
mixin results-save-clear
	table
		tr
			td 
				h4 0/200 results showing
			td
				a(href='#save') Save
			td
				a(href='main-app-view.html') Clear

