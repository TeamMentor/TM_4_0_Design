			input#article_2(type='checkbox')
			label(for='article_2', name='article_2') A New Or Blank Session ID is Assigned on Logout
		li
			input#article_3(type='checkbox')
			label(for='article_3', name='article_3') Access to the Credential Store is Limited
		li
			input#article_4(type='checkbox')
			label(for='article_4', name='article_4') AJAX Injection Vulnerability
		li
			input#article_5(type='checkbox')
			label(for='article_5', name='article_5') All Input is Validated
		li
			input#article_6(type='checkbox')
			label(for='article_6', name='article_6') All Private Resources Require Authentication
		li
			input#article_7(type='checkbox')
			label(for='article_7', name='article_7') All Senstive Data is Encrypted
		li
			input#article_8(type='checkbox')
			label(for='article_8', name='article_8') Assume All Input is Malicious
		li
			input#article_9(type='checkbox')
			label(for='article_9', name='article_9') Authentication is Centralized
		li
			input#article_10(type='checkbox')
			label(for='article_10', name='article_10') Centralize Authentication
		li
			input#article_11(type='checkbox')
			label(for='article_11', name='article_11') Client-side Validation is Not Relied On
		li
			input#article_12(type='checkbox')
