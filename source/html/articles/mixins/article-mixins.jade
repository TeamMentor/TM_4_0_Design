include ../../../content/mixins/articles-mixins.jade

//- Article
mixin article
	#article
		include:md ../../../content/teamMentor/articles/article-new-window.md
	// article-div

//- article-options
mixin article-options
	.row
		.col-offset-2.col-8
			h5 Metadata
			+metadata-table
		// column
	// row

//- related-articles
mixin related-articles
	h3 You might also like
	.list-group
		a(href='#{link_article_new_window}', target='_blank')
			include:md ../../../content/teamMentor/articles/article-summary.md
		a(href='#{link_article_new_window}', target='_blank')
			include:md ../../../content/teamMentor/articles/article-summary.md
		a(href='#{link_article_new_window}', target='_blank')
			include:md ../../../content/teamMentor/articles/article-summary.md
	// list-group

// Save Div
mixin save-div
	form
		.row
			.form-group
				+save-input
			.form-group
				a(href='alert-article-new-window-view.html')
					+save-button
		// row
	// form

// Share Div
mixin share-div
	form
		.row
			.form-group
				+share-input
			.form-group
				a(href='alert-article-new-window-view.html')
					+share-button
		// row
	// form

//- my-articles-edit
mixin edit-my-articles
	.form-group
		li
			input#article_1(type='checkbox')
			label(for='article_1', name='article_1') A New ID Is Assigned on Login
