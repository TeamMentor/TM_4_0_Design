extends ../_layouts/page_not_logged_in.jade
block content  
    #application
      .row
        .col-md-offset-3.col-md-6
          br
          h3.light-grey Login
          br
          form#login-form(role='form')
            .form-group
              label(for='new-user-username') Username
              input#new-user-username.form-control(type='username', placeholder='Username')
            .form-group
              label(for='new-user-password') Password
              input#new-user-password.form-control(type='password', placeholder='Password')
            .row
              .col-md-6
                a(href='/deploy/html/user/returning-user-validation.html')
                    button.btn-action.btn-submit.btn-block(type='button') Login
              .col-md-6
                a(href='returning-user-forgot-password.html')
                    button.btn-action.btn-submit.btn-block(type='button') Forgot your password?
          br
          br
