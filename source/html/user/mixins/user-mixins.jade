//- Jade User Details Form
mixin user-details-form
	form(role='form', action='alert-user')
		.form-group
			+name-input
		.form-group
			+email-input
		.form-group
			+title-input
		.form-group
			+company-input
		.form-group
			+country-input
		.form-group
			+state-input
		+ok-button
	// form

//- Jade New Password Form
mixin new-password-form
	h3 Change Password
	form(role='form', action='alert-user')
		.form-group
			+password-input
		.form-group
			+new-password-input
		.form-group
			+confirm-new-password-input
		+ok-button
	// form