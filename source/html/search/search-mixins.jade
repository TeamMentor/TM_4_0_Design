//- directory-list
mixin directory-list
    h3#title= title
    .list-group#containers
        if(containers)
            each container in containers   
                if container.id == filter_container
                        //a(href="graph?left=&right=" + filter_query, id=container.id)
                        a(href='graph')
                            i 
                                b= container.title
                            span.badge= container.size
                else
                    //a(href="graph?left=" + container.id + "&right=" + filter_query, id=container.id)= container.title 
                    a(href="graph?left=" + container.id, id=container.id)= container.title 
                        span.badge= container.size

//- search-bar-input
mixin search-bar-input
    .input-group
        input.form-control(type='text', placeholder='Type keywords here')
        span.input-group-btn
            button.btn-search-bar(type='button') SEARCH
            
//- results-save-clear
mixin results-save-clear
    table
        tr
            td 
                h4#resultsTitle= resultsTitle
            td 
                a(href='#save') Save
            td 
                a(href='main-app-view.html') Clear

//- articles-list
mixin articles-list    
    .list-group   
        if results
            each result in results                                    
                a(href='https://tmdev01-sme.teammentor.net/article/' + result.guid, id=result.id, target='_blank')
                    h4= result.title 
                    p= result.summary

//- filters
mixin filters-div
    #filters
        h3 Filters
        form(role='form', action='filters-active.html')
            if filters
                for filter in filters
                    //.form-group   
                    .list-group
                        h5= filter.title
                        for result in filter.results
                            li
                                if result.id == filter_query 
                                    //a(href="graph?left=" + filter_container + "&right=", id=result.id)
                                    a(href="graph")
                                        i
                                            b= result.title
                                        span.badge= result.size                                    
                                else                                    
                                    //a(href="graph?left=" + filter_container + "&right=" + result.id, id=result.id)
                                    a(href="graph?right=" + result.id, id=result.id)
                                        if(filter_query)
                                            font(color='gray')= result.title 
                                        else
                                            span= result.title 
                                        span.badge= result.size
                                
                            
                                //input(type='checkbox', id=result.title)
                                //label(for=result.title, type='checkbox')= result.title
                                    span.badge= result.size        

            button(type='submit')
                | Ok, Done

                