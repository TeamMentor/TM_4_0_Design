extends ../_layouts/flare_page_landing
include ../mixins/getting-started-mixins

block content
	#application
		#left-column
			+flare-alert
			dl.tabs(data-tab='data-tab')
				dd.active
					a(href='#signup') Sign Up
				dd
					a(href='#login') Login
			.tabs-content
				#signup.content.active
					+sign-up-form
				#login.content
					+flare-alert
					+login-form
		#right-column
			+team-mentor-summary