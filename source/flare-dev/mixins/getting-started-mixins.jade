include ../../shared-mixins/globals.jade
include globals.jade

mixin team-mentor-summary
    section.tm-summary
        .label With TEAM Mentor, you can...
        table
            tr
                td
                    .fix-vulnerabilities
                td
                    include:md ../../content/getting-started/summary-point-1.md
            tr
                td
                    .reduce-vulnerabilities
                td
                    include:md ../../content/getting-started/summary-point-2.md
            tr
                td
                    .improve-process
                td
                    include:md ../../content/getting-started/summary-point-3.md

mixin login-form
    form#login-form.access-form(role='form' method='post' action='/flare/home/main-app-view')
        .input-field
            +username-input
        .input-field
            +password-input
        .button-field
            li
                button Login
        .button-field
            li
                button.minor(href='/guest/pwd-forgot.html') Forgot password?

mixin sign-up-form
    form#sign-up-form.access-form(action='../home/main-app-view')
        .input-field
            +username-input
        .input-field
            +email-input
        .input-field
            +password-input
        .input-field
            +confirm-password-input
        .button-field
            li
                +sign-up-button
        .conditions
            include:md ../../content/getting-started/agree-to-toc.md

mixin sign-up-form-prompts
    p hello
    //include:md ../../content/getting-started/sign-up-form.md
    //form(action='../../home/main-app-view')
        .row
            .small-12.columns
                +username-input
                include:md ../../content/getting-started/username-prompt.md
        .row
            .small-12.columns
                +email-input
                include:md ../../content/getting-started/email-prompt.md
        .row
            .small-12.columns
                +flare-password-input
                include:md ../../content/getting-started/password-prompt.md
        .row
            .small-12.columns
                include:md ../../content/getting-started/agree-to-toc.md
        .row
            .small-12.medium-6.columns
                +sign-up-button

mixin flare-forgot-password-form
    p hello
    //include:md ../../content/getting-started/forgot-password-form.md
    //form(action='index-validation')
        .row
            .small-12.columns
                +email-input
        .row
            .small-12.medium-6.columns
                +get-password-button

mixin pwd-reset-form
    .bg
        P Reset your password
        form(role='form' method='post' action='/flare/home/main-app-view')
            .row
                .small-12.columns
                    +password-input
            .row
                .small-12.columns
                    +confirm-new-password-input
            br
            .row
                .small-12.medium-7.columns
                    +reset-pwd-button